// contenedores principales (padres)

html, body
  margin: 0
  padding: 0
  font-size: size-principal-font
  font-family: gn-font

figure
  margin: 0

//logo
.logo-brand
  line-height: gn-space

//contenedor header
.header
  background-color: color-brand
  flex-box-content(space-between)
  height: 60px

//contenedor hero
.hero
  height: calc(100vh - 60px)
  background-repeat: no-repeat
  background-position: center bottom
  background-size: 100% 40%
  background-image: url('../images/curve.png')
  overflow: hidden

//contededor de la descripci칩n de los productos
.description-product
  grid-box-content(3, auto, 250px)
  justify-content: space-evenly
  padding: assign-space(11em) 0 assign-space(3em) 0
  border-bottom: 1px solid color-white-border

//Contenedor de menciones
.mentions
  grid-box-content(4, auto, 250px)
  grid-column-gap: gn-space
  justify-content: center
  padding: assign-space(3em) 0 assign-space(3em) 0

//footer
.footer
  background-color: color-footer
  color: color-white
  flex-box-content(space-between)

//*************P치gina de productos ************

//productos
.products-container
  grid-box-content(1, auto, 1fr)
  grid-row-gap: assign-space(4em)
  padding: assign-space(1em) 0 assign-space(9em)

// ********* P치gina de ventas ***************

//P치gina de venta del producto
.sale-container
  grid-box-modify(350px, 2em)
  height: calc(100vh - 119px)
  align-items: center
  // padding: assign-space(5) 0
  & .item
    box-shadow: box-style-shadow
    padding: gn-space
    height: 400px
    border-radius: 0.5em
    & .sale-product-imgContainer
      text-align: center
